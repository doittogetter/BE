<appender name="WARN_FILE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/doto-${spring.profiles.active}-error-%d{yyyy-MM-dd}.log</file>
    <encoder>
        <pattern>${FILE_LOG_PATTERN}</pattern>
        <charset>UTF-8</charset>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>logs/doto-${spring.profiles.active}-error-%d{yyyy-MM-dd}.log</fileNamePattern>
        <maxHistory>3</maxHistory>
        <totalSizeCap>1GB</totalSizeCap>
        <maxFileSize>10MB</maxFileSize>
    </rollingPolicy>


</appender>